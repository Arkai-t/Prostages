{% extends 'base.html.twig' %}

{% block contenu %}
<html>
    <body>
        <h3>Stage de {{stage.titre}}</h3>
        <div class="card-body">
            <h5>Description</h5>
            <p>{{stage.description}}</p>
            <br>
            <p> Ce stage s'adresse aux personnes titulaires d'un :<p>
            <ul>
                {% for formationCourante in stage.formations %}
                <li>{{formationCourante.nom}}</li>
                {% endfor %}
            </ul>
            <h5>Contact de {{stage.entreprise.nom}}</h5>
            <ul>
                <li>{{stage.mail}}</li>
                <li>{{stage.entreprise.adresse}}</li>
                <li><a href={{stage.entreprise.site}} class="text-decoration-none">Site de l'entreprise</a></li>
            </ul>
        </div>
    </body>
</html>
{% endblock %}
{% block footer %}
    <footer class="footer fixed-bottom bg-secondary">
        <div class="text-center text-white"><small>Designed by L. VINCENT</small></div>
    </footer>
{% endblock %}