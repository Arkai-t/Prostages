{% extends 'base.html.twig' %}

{% block boutonAccueil %}
    <a class="nav-link active" href="{{path('prostageAccueil')}}">Accueil</a>
{% endblock %}                    

{% block contenu %}
    <h3>Ci-dessous la liste des stages pr√©sents sur Prostages</h3><br>
    {% if is_granted('ROLE_USER') %}                      
        <p>Vous proposez un stage ? <a href='{{path('prostageAjoutStage')}}' class="text-decoration-none">Ajoute le !</a></p>
    {% endif %}    
    <br>
    <div class="list-group">

        {% for stageCourant in stages %}
        <li class = "list-group-item">
            <a href='{{path('prostageStages',{id:stageCourant.id})}}' class="text-body">
                <div class="list-group">
                    <p class="font-weight-bold">{{stageCourant.titre}}</p>
                </div>
                <small>
                    <p class="mb-1">Entreprise : <i>{{stageCourant.entreprise.nom}}</i></p>
                </small>
            </a>
        </li>
        {% endfor %}
    </div>
{% endblock %}