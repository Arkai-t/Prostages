{% extends 'base.html.twig' %}
{% block boutonFormations %}
    <a class="nav-link active" href="{{path('prostageFormations')}}">Formations</a>
{% endblock %}
{% block contenu %}

<html>
    <body>
        <br>
        <h3>Liste des formations</h3>
        <br>
        <ul class="list-group">
        {% for formationCourante in formations %}
            <li class = "list-group-item">
                <a href='{{path('prostageFormation',{id:formationCourante.id})}}' class="text-decoration-none">
                {{formationCourante.nom}}
                </a>
            </li>
        {% endfor %}
        </ul>
    </body>
</html>

{% endblock %}